{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Liste des monnaies
{% endblock %}
{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="text-center text-dark">Liste des monnaies</h1>
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th width="70%" scope="col" class="text-white">zone géographique</th>
								<th width="30%" scope="col" class="text-white">nom</th>
							</tr>
						</thead>
						<tbody>
							{% for m in economic %}
								<tr class="{{ cycle(['table- primary','table-secondary'], loop.index0) }}">
									<td>{{ m.name }}</td>
									<td>{{ m.id_zone }}€</td>
                                    <td>{{ m.currency.name }}</td>  
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
